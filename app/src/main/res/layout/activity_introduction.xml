<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightblue"
    tools:context="com.example.ashley.myapplication.Introduction"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <include layout="@layout/normal_top_layout"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/include2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/logo_1"
        android:id="@+id/imageView"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/include2"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/include2" />

    <TextView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/darkblue"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="- Unveil is an interactive navigation application that offers you auditory messages during your commute from A to B.\n- If you fill in your departing location and destination, a map will show you hotspots along your route.\n- There are currently six hotspot categories that can be selected in the category menu.\n- Once you start your route, messages of your picked category will play during your commute."
        android:id="@+id/textView"
        android:layout_marginTop="35dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/darkblue"
        android:textStyle="bold"
        android:textSize="12sp"
        android:text="Unveil was developed for academical purposes by Shiting Long and Winke Wiegersma."
        android:layout_marginTop="255dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:layout_marginLeft="42dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView" />

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textColor="@color/darkblue"
        android:textStyle="italic"
        android:textSize="10sp"
        android:text="Icon references:\nwww.freepik.com\nwww.flaticon.com/authors/hadrien\nwww.flaticon.com/authors/zlatko-najdenovski"
        app:layout_constraintLeft_toLeftOf="@+id/imageView"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="408dp"
        app:layout_constraintTop_toBottomOf="@+id/include2" />


</android.support.constraint.ConstraintLayout>
